<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="AmazonSuite" parallel="tests" thread-count="3">
    <!-- Chrome Test -->
    <test name="ChromeTest" thread-count="1">
        <parameter name="bname" value="chrome" />
        <classes>
            <class name="com.tutorialninja.testcases.amazon"/>
        </classes>
    </test>
    
    <!-- Firefox Test -->
    <test name="FirefoxTest" thread-count="1">
        <parameter name="bname" value="firefox" />
        <classes>
            <class name="com.tutorialninja.testcases.amazon"/>
        </classes>
    </test>
    
    <!-- Edge Test -->
    <test name="EdgeTest" thread-count="1">
        <parameter name="bname" value="edge" />
        <classes>
            <class name="com.tutorialninja.testcases.amazon"/>
        </classes>
    </test>
</suite>
